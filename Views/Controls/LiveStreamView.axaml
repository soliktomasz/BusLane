<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BusLane.ViewModels"
             xmlns:models="using:BusLane.Models"
             x:Class="BusLane.Views.Controls.LiveStreamView"
             x:DataType="vm:LiveStreamViewModel">
    
    <Border Classes="card" Padding="0">
        <Grid RowDefinitions="Auto,Auto,*">
            <!-- Header -->
            <Border Grid.Row="0" BorderBrush="{DynamicResource BorderDefault}" BorderThickness="0,0,0,1" Padding="16">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Live Stream" Classes="heading" VerticalAlignment="Center"/>
                            
                            <!-- Status indicator -->
                            <Border CornerRadius="4" Padding="8,4"
                                    Background="{Binding IsStreaming, Converter={StaticResource BoolToColorConverter}}">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <Ellipse Width="8" Height="8" 
                                             Fill="{Binding IsStreaming, Converter={StaticResource BoolToStatusColorConverter}}"/>
                                    <TextBlock Text="{Binding IsStreaming, Converter={StaticResource BoolToStatusTextConverter}}"
                                               FontSize="12" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Current entity info -->
                        <StackPanel Orientation="Horizontal" Spacing="8" 
                                    IsVisible="{Binding CurrentEntityName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                            <TextBlock Text="{Binding CurrentEntityType}" Classes="caption" Foreground="{DynamicResource SubtleForeground}"/>
                            <TextBlock Text=":" Classes="caption" Foreground="{DynamicResource SubtleForeground}"/>
                            <TextBlock Text="{Binding CurrentEntityName}" Classes="caption" FontWeight="SemiBold"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{Binding MessageCount, StringFormat='{}({0} messages)'}" 
                                   VerticalAlignment="Center" FontSize="12"
                                   Foreground="{DynamicResource SubtleForeground}"/>
                        <Button Classes="subtle small" Content="Clear" 
                                Command="{Binding ClearMessagesCommand}"
                                Padding="8,6"/>
                        <Button Classes="danger-subtle small" Content="Stop" 
                                Command="{Binding StopStreamCommand}"
                                IsVisible="{Binding IsStreaming}"
                                Padding="8,6"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Filter & Options Bar -->
            <Border Grid.Row="1" Background="{DynamicResource SurfaceSubtle}" Padding="16,12">
                <Grid ColumnDefinitions="*,Auto">
                    <!-- Search/Filter -->
                    <Border Grid.Column="0" Background="{DynamicResource SurfaceDefault}" CornerRadius="6" Padding="8,6" Margin="0,0,12,0">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <PathIcon Grid.Column="0" Data="{StaticResource IconSearch}" 
                                      Width="14" Height="14" 
                                      Foreground="{DynamicResource MutedForeground}"
                                      Margin="4,0,8,0"/>
                            <TextBox Grid.Column="1" 
                                     Text="{Binding FilterText, Mode=TwoWay}"
                                     Watermark="Filter messages..."
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="0,4"
                                     FontSize="13"/>
                            <Button Grid.Column="2" 
                                    Classes="subtle small"
                                    Command="{Binding ClearFilterCommand}"
                                    IsVisible="{Binding FilterText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                    Padding="4">
                                <PathIcon Data="{StaticResource IconClose}" Width="12" Height="12"/>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- Options -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                        <CheckBox Content="Auto-scroll" IsChecked="{Binding AutoScroll}"/>
                        <CheckBox Content="Peek mode (non-destructive)" IsChecked="{Binding IsPeekMode}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Messages List -->
            <Grid Grid.Row="2">
                <!-- Loading/Connecting indicator -->
                <Border IsVisible="{Binding IsConnecting}" 
                        VerticalAlignment="Center" HorizontalAlignment="Center"
                        Padding="24" Background="{DynamicResource SurfaceSubtle}" CornerRadius="8">
                    <StackPanel Spacing="12" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="120" Height="4"/>
                        <TextBlock Text="Connecting to stream..." FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Error message -->
                <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                        VerticalAlignment="Top" Margin="16"
                        Padding="16" Background="#FFF4F4" CornerRadius="8">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <PathIcon Data="{StaticResource IconWarning}" Width="20" Height="20" Foreground="#D13438"/>
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#D13438" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <!-- Not streaming state -->
                <StackPanel IsVisible="{Binding !IsStreaming}"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Spacing="8">
                    <PathIcon Data="{StaticResource IconStream}" Width="48" Height="48" 
                              Foreground="{DynamicResource SubtleForeground}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Select a queue or subscription to start streaming" 
                               FontSize="14" Foreground="{DynamicResource SubtleForeground}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- Messages list -->
                <ListBox ItemsSource="{Binding FilteredMessages}"
                         SelectedItem="{Binding SelectedMessage}"
                         IsVisible="{Binding IsStreaming}"
                         Padding="8">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="models:LiveStreamMessage">
                            <Border Padding="12,8" Margin="0,2" CornerRadius="4"
                                    Background="{DynamicResource SurfaceSubtle}">
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                    <!-- Message ID and time -->
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding MessageId}" FontWeight="SemiBold" FontSize="13"/>
                                        <Border Background="{DynamicResource AccentSubtle}" CornerRadius="4" Padding="6,2">
                                            <TextBlock Text="{Binding EntityType}" FontSize="11" Foreground="{DynamicResource AccentBrand}"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                               Text="{Binding ReceivedAt, StringFormat='{}{0:HH:mm:ss.fff}'}"
                                               FontSize="12" Foreground="{DynamicResource SubtleForeground}"/>
                                    
                                    <!-- Body preview -->
                                    <TextBlock Grid.Row="1" Grid.ColumnSpan="2" 
                                               Text="{Binding Body}" 
                                               MaxLines="2" TextTrimming="CharacterEllipsis"
                                               FontSize="12" Foreground="{DynamicResource SubtleForeground}"
                                               Margin="0,4,0,0"/>
                                    
                                    <!-- Metadata -->
                                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="12" Margin="0,4,0,0">
                                        <TextBlock FontSize="11" Foreground="{DynamicResource MutedForeground}">
                                            <Run Text="Seq:"/>
                                            <Run Text="{Binding SequenceNumber}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="11" Foreground="{DynamicResource MutedForeground}"
                                                   IsVisible="{Binding CorrelationId, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                            <Run Text="Correlation:"/>
                                            <Run Text="{Binding CorrelationId}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="11" Foreground="{DynamicResource MutedForeground}"
                                                   IsVisible="{Binding SessionId, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                            <Run Text="Session:"/>
                                            <Run Text="{Binding SessionId}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
    </Border>
</UserControl>

