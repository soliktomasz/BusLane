<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BusLane.ViewModels"
             xmlns:models="using:BusLane.Models"
             xmlns:converters="using:BusLane.Converters"
             x:Class="BusLane.Views.Controls.NavigationSidebar"
             x:DataType="vm:MainWindowViewModel">
    
    <UserControl.Resources>
        <converters:EntitySelectionConverter x:Key="EntitySelectionConverter"/>
        <converters:EntitySelectionBackgroundConverter x:Key="EntitySelectionBackgroundConverter"/>
    </UserControl.Resources>
    
    <Border Classes="sidebar">
        <DockPanel>
            <!-- App Header -->
            <Border DockPanel.Dock="Top" Background="{DynamicResource SurfaceSubtle}" Padding="16,16,16,12">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Viewbox Width="32" Height="32">
                            <Canvas Width="512" Height="512">
                                <!-- Rounded square background -->
                                <Rectangle Canvas.Left="32" Canvas.Top="32" Width="448" Height="448" RadiusX="96" RadiusY="96" Fill="#0F172A"/>
                                
                                <!-- Road -->
                                <Rectangle Canvas.Left="32" Canvas.Top="240" Width="448" Height="120" Fill="#1E293B"/>
                                
                                <!-- Lane dashes -->
                                <Rectangle Canvas.Left="72" Canvas.Top="292" Width="56" Height="16" RadiusX="8" RadiusY="8" Fill="#475569"/>
                                <Rectangle Canvas.Left="152" Canvas.Top="292" Width="56" Height="16" RadiusX="8" RadiusY="8" Fill="#475569"/>
                                <Rectangle Canvas.Left="232" Canvas.Top="292" Width="56" Height="16" RadiusX="8" RadiusY="8" Fill="#475569"/>
                                <Rectangle Canvas.Left="312" Canvas.Top="292" Width="56" Height="16" RadiusX="8" RadiusY="8" Fill="#475569"/>
                                <Rectangle Canvas.Left="392" Canvas.Top="292" Width="56" Height="16" RadiusX="8" RadiusY="8" Fill="#475569"/>
                                
                                <!-- Bus body -->
                                <Rectangle Canvas.Left="120" Canvas.Top="136" Width="272" Height="136" RadiusX="24" RadiusY="24" Fill="#F59E0B"/>
                                
                                <!-- Roof accent -->
                                <Rectangle Canvas.Left="120" Canvas.Top="136" Width="272" Height="20" RadiusX="24" RadiusY="24" Fill="#D97706"/>
                                <Rectangle Canvas.Left="120" Canvas.Top="148" Width="272" Height="8" Fill="#D97706"/>
                                
                                <!-- Windows row -->
                                <Rectangle Canvas.Left="152" Canvas.Top="168" Width="48" Height="40" RadiusX="8" RadiusY="8" Fill="#0F172A"/>
                                <Rectangle Canvas.Left="216" Canvas.Top="168" Width="48" Height="40" RadiusX="8" RadiusY="8" Fill="#0F172A"/>
                                <Rectangle Canvas.Left="280" Canvas.Top="168" Width="48" Height="40" RadiusX="8" RadiusY="8" Fill="#0F172A"/>
                                <Rectangle Canvas.Left="344" Canvas.Top="168" Width="32" Height="40" RadiusX="8" RadiusY="8" Fill="#0F172A"/>
                                
                                <!-- Front -->
                                <Rectangle Canvas.Left="360" Canvas.Top="224" Width="24" Height="24" RadiusX="6" RadiusY="6" Fill="#FDE68A"/>
                                
                                <!-- Back -->
                                <Rectangle Canvas.Left="128" Canvas.Top="224" Width="16" Height="24" RadiusX="4" RadiusY="4" Fill="#DC2626"/>
                                
                                <!-- Wheels -->
                                <Ellipse Canvas.Left="160" Canvas.Top="240" Width="64" Height="64" Fill="#0F172A"/>
                                <Ellipse Canvas.Left="176" Canvas.Top="256" Width="32" Height="32" Fill="#475569"/>
                                <Ellipse Canvas.Left="288" Canvas.Top="240" Width="64" Height="64" Fill="#0F172A"/>
                                <Ellipse Canvas.Left="304" Canvas.Top="256" Width="32" Height="32" Fill="#475569"/>
                            </Canvas>
                        </Viewbox>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Bus Lane" FontSize="18" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="Service Bus Manager" Classes="caption" FontSize="11"/>
                                <Border Classes="badge-info" Padding="4,1">
                                    <TextBlock Text="{Binding AppVersion}" FontSize="10" Foreground="{DynamicResource AccentBrand}"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Action Buttons -->
            <StackPanel DockPanel.Dock="Top" Margin="12,16,12,12" Spacing="8">
                <!-- Connection Library Button (always visible) -->
                <Button Classes="primary" 
                        Command="{Binding OpenConnectionLibraryCommand}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="12,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ“š" FontSize="14"/>
                        <TextBlock Text="My Connections" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
                
                <!-- Azure Sign In (when not authenticated and not using connection string) -->
                <Button Classes="secondary" 
                        Command="{Binding LoginCommand}"
                        IsVisible="{Binding !IsAuthenticated}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="12,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="â˜ï¸" FontSize="14"/>
                        <TextBlock Text="Sign in with Azure"/>
                    </StackPanel>
                </Button>
                
                <!-- Sign Out (when authenticated with Azure) -->
                <Button Classes="secondary" 
                        Command="{Binding LogoutCommand}"
                        IsVisible="{Binding IsAuthenticated}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="12,10">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸšª" FontSize="14"/>
                        <TextBlock Text="Sign Out"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <Separator DockPanel.Dock="Top" Margin="12,0"/>
            
            <!-- Favorite Connections Section -->
            <StackPanel DockPanel.Dock="Top" 
                        IsVisible="{Binding HasFavoriteConnections}"
                        Margin="0,12,0,0">
                <ToggleButton Classes="subtle"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              Padding="16,4,16,8"
                              IsChecked="True"
                              x:Name="FavoritesToggleButton">
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="â˜…" FontSize="14" Foreground="{DynamicResource AccentBrand}"/>
                            <TextBlock Text="Favorites" Classes="body-strong"/>
                        </StackPanel>
                        <Border Grid.Column="2" Classes="badge-muted" VerticalAlignment="Center" Padding="8,3" Margin="0,0,8,0">
                            <TextBlock Text="{Binding FavoriteConnections.Count}" FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource SubtleForeground}"/>
                        </Border>
                        <Panel Grid.Column="3" VerticalAlignment="Center">
                            <TextBlock Text="â–¼" 
                                       FontSize="10"
                                       IsVisible="{Binding #FavoritesToggleButton.IsChecked}"/>
                            <TextBlock Text="â–¶" 
                                       FontSize="10"
                                       IsVisible="{Binding !#FavoritesToggleButton.IsChecked}"/>
                        </Panel>
                    </Grid>
                </ToggleButton>
                
                <ItemsControl ItemsSource="{Binding FavoriteConnections}" Margin="8,0,8,8"
                              IsVisible="{Binding #FavoritesToggleButton.IsChecked}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:SavedConnection">
                            <Button Classes="subtle" 
                                    Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ConnectToSavedConnectionCommand}"
                                    CommandParameter="{Binding}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Padding="0"
                                    Margin="4,2">
                                <Grid ColumnDefinitions="Auto,*">
                                    <!-- Selection indicator bar -->
                                    <Border Grid.Column="0" Classes="selection-indicator" 
                                            VerticalAlignment="Stretch"
                                            Margin="0,4,4,4">
                                        <Border.IsVisible>
                                            <MultiBinding Converter="{StaticResource EntitySelectionConverter}">
                                                <Binding Path="."/>
                                                <Binding Path="$parent[Window].((vm:MainWindowViewModel)DataContext).ActiveConnection"/>
                                            </MultiBinding>
                                        </Border.IsVisible>
                                    </Border>
                                    
                                    <!-- Connection content with selection background -->
                                    <Border Grid.Column="1" Padding="12,10" CornerRadius="6">
                                        <Border.Background>
                                            <MultiBinding Converter="{StaticResource EntitySelectionBackgroundConverter}">
                                                <Binding Path="."/>
                                                <Binding Path="$parent[Window].((vm:MainWindowViewModel)DataContext).ActiveConnection"/>
                                            </MultiBinding>
                                        </Border.Background>
                                        <Grid ColumnDefinitions="Auto,*">
                                            <!-- Connection Icon -->
                                            <Border Grid.Column="0" 
                                                    Width="36" Height="36" 
                                                    CornerRadius="6" 
                                                    Background="{DynamicResource SurfaceBrand}"
                                                    Margin="0,0,10,0">
                                                <TextBlock Text="â†—" FontWeight="Bold" FontSize="14" 
                                                           Foreground="{DynamicResource AccentBrand}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Connection Details -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="12"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding TypeDisplayName}" 
                                                           Classes="caption" 
                                                           FontSize="10"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
                <Separator Margin="12,4,12,0"/>
            </StackPanel>
            
            <!-- Settings Button - Docked to bottom -->
            <Button DockPanel.Dock="Bottom"
                    Classes="subtle" 
                    Command="{Binding OpenSettingsCommand}"
                    HorizontalAlignment="Stretch"
                    Margin="12,8,12,12"
                    Padding="12,10">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="âš™ï¸" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Text="Settings" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <!-- Active Connection Card (when using connection string) - Docked to bottom -->
            <Border DockPanel.Dock="Bottom" Margin="12,12,12,8"
                    IsVisible="{Binding ActiveConnection, Converter={x:Static ObjectConverters.IsNotNull}}"
                    Classes="card" Padding="0">
                <StackPanel>
                    <!-- Connection Info -->
                    <Border Background="{DynamicResource SurfaceSubtle}" CornerRadius="8,8,0,0" Padding="16,12" BorderBrush="{DynamicResource BorderDefault}" BorderThickness="0,0,0,1">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Border Width="8" Height="8" CornerRadius="4" Background="{DynamicResource TextSuccess}"/>
                                <TextBlock Text="Connected" Classes="caption" Foreground="{DynamicResource TextSuccess}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding ActiveConnection.Name}" 
                                       FontWeight="SemiBold" 
                                       FontSize="14" 
                                       Margin="0,6,0,0"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{Binding ActiveConnection.EntityName}" 
                                       Classes="caption" 
                                       Margin="0,2,0,0"
                                       TextTrimming="CharacterEllipsis"
                                       IsVisible="{Binding ActiveConnection.EntityName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                            
                            <!-- Dead Letter Count Badge -->
                            <Border Classes="badge-danger" Padding="8,4" Margin="0,8,0,0"
                                    HorizontalAlignment="Left"
                                    IsVisible="{Binding HasDeadLetters}">
                                <TextBlock Text="{Binding TotalDeadLetterCount, StringFormat='{}{0} Dead Letters'}"
                                           Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Disconnect Button -->
                    <Button Classes="danger-outline" 
                            Content="Disconnect"
                            Command="{Binding DisconnectConnectionCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Margin="12"
                            Padding="12,6"/>
                </StackPanel>
            </Border>
            
            <!-- Azure Account Section (when authenticated) -->
            <StackPanel DockPanel.Dock="Top" 
                        IsVisible="{Binding ShowAzureSections}"
                        Margin="0,12,0,0">
                
                <!-- Subscription Picker Section -->
                <Border Background="{DynamicResource SurfaceSubtle}" Padding="12,10" Margin="12,0">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="â˜ï¸" FontSize="12"/>
                            <TextBlock Text="Azure Subscription" Classes="caption" FontWeight="SemiBold"/>
                        </StackPanel>
                        <ComboBox ItemsSource="{Binding Subscriptions}"
                                  SelectedItem="{Binding SelectedAzureSubscription}"
                                  HorizontalAlignment="Stretch"
                                  Padding="10,8">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="models:AzureSubscription">
                                    <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </Border>
                
                <Separator Margin="12,12"/>
                
                <!-- Namespaces Section Header -->
                <Grid Margin="16,4,16,8" ColumnDefinitions="Auto,*,Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ“¡" FontSize="14"/>
                        <TextBlock Text="Namespaces" Classes="body-strong"/>
                    </StackPanel>
                    <Border Grid.Column="2" Classes="badge-muted" VerticalAlignment="Center" Padding="8,3">
                        <TextBlock Text="{Binding Namespaces.Count}" FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource SubtleForeground}"/>
                    </Border>
                </Grid>
            </StackPanel>
            
            <!-- Namespaces List (Scrollable) -->
            <ScrollViewer IsVisible="{Binding ShowAzureSections}" Margin="0,0,0,8">
                <ItemsControl ItemsSource="{Binding Namespaces}" Margin="8,0,8,8">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:ServiceBusNamespace">
                            <Button Classes="subtle" 
                                    Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).SelectNamespaceCommand}"
                                    CommandParameter="{Binding}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Padding="0"
                                    Margin="4,2">
                                <Grid ColumnDefinitions="Auto,*">
                                    <!-- Selection indicator bar (Fluent 2 accent bar) -->
                                    <Border Grid.Column="0" Classes="selection-indicator" 
                                            VerticalAlignment="Stretch"
                                            Margin="0,4,4,4">
                                        <Border.IsVisible>
                                            <MultiBinding Converter="{StaticResource EntitySelectionConverter}">
                                                <Binding Path="."/>
                                                <Binding Path="$parent[Window].((vm:MainWindowViewModel)DataContext).SelectedNamespace"/>
                                            </MultiBinding>
                                        </Border.IsVisible>
                                    </Border>
                                    
                                    <!-- Namespace content with selection background -->
                                    <Border Grid.Column="1" Padding="12,10" CornerRadius="6">
                                        <Border.Background>
                                            <MultiBinding Converter="{StaticResource EntitySelectionBackgroundConverter}">
                                                <Binding Path="."/>
                                                <Binding Path="$parent[Window].((vm:MainWindowViewModel)DataContext).SelectedNamespace"/>
                                            </MultiBinding>
                                        </Border.Background>
                                        <Grid ColumnDefinitions="Auto,*">
                                            <!-- Namespace Icon -->
                                            <Border Grid.Column="0" 
                                                    Width="40" Height="40" 
                                                    CornerRadius="8" 
                                                    Background="{DynamicResource SurfaceBrand}"
                                                    Margin="0,0,12,0">
                                                <TextBlock Text="SB" FontWeight="Bold" FontSize="13" 
                                                           Foreground="{DynamicResource AccentBrand}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Namespace Details -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="SemiBold" 
                                                           FontSize="13"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal" Spacing="6">
                                                    <TextBlock Text="ðŸ“" FontSize="10"/>
                                                    <TextBlock Text="{Binding Location}" 
                                                               Classes="caption" 
                                                               FontSize="11"
                                                               TextTrimming="CharacterEllipsis"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Empty State when not authenticated and no active connection -->
            <Border Margin="12,24,12,12"
                    Classes="empty-state">
                <Border.IsVisible>
                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                        <Binding Path="!ShowAzureSections"/>
                        <Binding Path="ActiveConnection" Converter="{x:Static ObjectConverters.IsNull}"/>
                    </MultiBinding>
                </Border.IsVisible>
                <StackPanel HorizontalAlignment="Center" Spacing="12">
                    <TextBlock Text="â˜ï¸" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="Get Started" FontWeight="SemiBold" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock Text="Sign in with Azure or use a&#10;saved connection to browse&#10;your Service Bus resources." 
                               Classes="caption" 
                               TextAlignment="Center"
                               LineHeight="18"/>
                </StackPanel>
            </Border>
        </DockPanel>
    </Border>
</UserControl>

