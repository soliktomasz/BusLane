<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BusLane.ViewModels"
             xmlns:models="using:BusLane.Models"
             x:Class="BusLane.Views.Dialogs.LoadMessageDialog"
             x:DataType="vm:MainWindowViewModel">
    
    <Border Classes="modal-overlay"
            IsVisible="{Binding SendMessageViewModel.ShowLoadDialog, FallbackValue=False, TargetNullValue=False}">
        <Border Classes="send-message-panel" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Width="520"
                MaxHeight="500"
                Padding="0">
            <DockPanel>
                <!-- Header -->
                <Border DockPanel.Dock="Top" 
                        Background="{DynamicResource SurfaceSubtle}" 
                        Padding="24,20" 
                        CornerRadius="12,12,0,0"
                        BorderBrush="{DynamicResource BorderMuted}"
                        BorderThickness="0,0,0,1">
                    <Grid RowDefinitions="Auto,Auto">
                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Background="{DynamicResource SurfaceBrand}"
                                        CornerRadius="8"
                                        Width="40" Height="40">
                                    <LucideIcon Kind="FolderOpen" Size="20"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource AccentBrand}"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Load Template" Classes="heading"/>
                                    <TextBlock Text="Select a saved message template" Classes="caption"/>
                                </StackPanel>
                            </StackPanel>
                            <Button Classes="icon" 
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Command="{Binding SendMessageViewModel.HideLoadCommand}">
                                <LucideIcon Kind="X" Size="16"/>
                            </Button>
                        </Grid>
                        <!-- Import/Export buttons row -->
                        <StackPanel Grid.Row="1" 
                                    Orientation="Horizontal" 
                                    Spacing="8" 
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Left">
                            <Button Classes="secondary small"
                                    ToolTip.Tip="Import messages from JSON file"
                                    Command="{Binding SendMessageViewModel.ImportMessagesCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <LucideIcon Kind="Download" Size="12"/>
                                    <TextBlock Text="Import"/>
                                </StackPanel>
                            </Button>
                            <Button Classes="secondary small"
                                    ToolTip.Tip="Export all saved messages to JSON file"
                                    Command="{Binding SendMessageViewModel.ExportMessagesCommand}"
                                    IsEnabled="{Binding SendMessageViewModel.SavedMessages.Count}">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <LucideIcon Kind="Upload" Size="12"/>
                                    <TextBlock Text="Export All"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Content -->
                <DockPanel>
                    <!-- Empty state -->
                    <Border DockPanel.Dock="Top"
                            Classes="empty-state"
                            IsVisible="{Binding !SendMessageViewModel.SavedMessages.Count}"
                            Margin="16">
                        <StackPanel HorizontalAlignment="Center" Spacing="8">
                            <LucideIcon Kind="MessageSquare" Size="32" HorizontalAlignment="Center" Foreground="{DynamicResource SubtleForeground}"/>
                            <TextBlock Text="No saved templates yet" 
                                       Classes="body-strong" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Save a message to reuse it later" 
                                       Classes="caption" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Template list -->
                    <ListBox ItemsSource="{Binding SendMessageViewModel.SavedMessages}"
                             Classes="entity-list"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="8"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="models:SavedMessage">
                                    <Border Classes="property-row" Padding="14,12" Margin="0,0,0,4">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="16"/>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:MMM d, yyyy}'}" 
                                                               Classes="caption" FontSize="11"/>
                                                    <TextBlock Text="â€¢" Classes="caption" FontSize="11"/>
                                                    <TextBlock Text="{Binding ContentType}" 
                                                               Classes="caption" FontSize="11"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Body}" 
                                                           Classes="caption"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxLines="1"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource MutedForeground}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" 
                                                        Orientation="Horizontal" 
                                                        Spacing="8"
                                                        VerticalAlignment="Center">
                                                <Button Classes="primary small" 
                                                        Content="Use Template"
                                                        Padding="14,6"
                                                        Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).SendMessageViewModel.LoadMessageCommand}"
                                                        CommandParameter="{Binding}"/>
                                                <Button Classes="icon"
                                                        ToolTip.Tip="Export message"
                                                        Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).SendMessageViewModel.ExportSingleMessageCommand}"
                                                        CommandParameter="{Binding}">
                                                    <LucideIcon Kind="Upload" Size="12"/>
                                                </Button>
                                                <Button Classes="icon" 
                                                        ToolTip.Tip="Delete template"
                                                        Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).SendMessageViewModel.DeleteSavedMessageCommand}"
                                                        CommandParameter="{Binding}">
                                                    <LucideIcon Kind="Trash2" Size="12"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </DockPanel>
        </Border>
    </Border>
</UserControl>

