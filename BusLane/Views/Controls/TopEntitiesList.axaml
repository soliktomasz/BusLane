<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BusLane.ViewModels.Dashboard;assembly=BusLane"
             xmlns:models="clr-namespace:BusLane.Models.Dashboard;assembly=BusLane"
             xmlns:converters="clr-namespace:BusLane.Converters;assembly=BusLane"
             mc:Ignorable="d"
             x:Class="BusLane.Views.Controls.TopEntitiesList"
             x:DataType="vm:TopEntitiesListViewModel">

    <Border Classes="card" Padding="0">
        <Grid RowDefinitions="Auto,*">
            <!-- Header -->
            <Border Grid.Row="0"
                    BorderBrush="{DynamicResource BorderDefault}"
                    BorderThickness="0,0,0,1"
                    Padding="16,12"
                    Background="{DynamicResource SurfaceSubtle}">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Border Background="{DynamicResource AccentBrand}"
                           CornerRadius="4"
                           Padding="6"
                           VerticalAlignment="Center">
                        <LucideIcon Kind="ListOrdered" Size="14" Foreground="White"/>
                    </Border>
                    <TextBlock Text="{Binding Title}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimary}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Entities List -->
            <ScrollViewer Grid.Row="1"
                         VerticalScrollBarVisibility="Auto"
                         MaxHeight="350">
                <ItemsControl ItemsSource="{Binding Entities}">
                    <ItemsControl.Styles>
                        <!-- Alternating row colors -->
                        <Style Selector="ItemsControl > ContentPresenter:nth-child(2n)">
                            <Setter Property="Background" Value="{DynamicResource SurfaceSubtle}"/>
                        </Style>
                    </ItemsControl.Styles>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="models:TopEntityInfo">
                            <Border Padding="12,10">
                                <Grid ColumnDefinitions="Auto,*"
                                      RowDefinitions="Auto,Auto,Auto"
                                      VerticalAlignment="Center"
                                      RowSpacing="6">
                                    <!-- Entity Icon -->
                                    <Border Grid.Column="0"
                                           Grid.Row="0"
                                           Grid.RowSpan="3"
                                           Background="{DynamicResource InputBackground}"
                                           CornerRadius="6"
                                           Width="28"
                                           Height="28"
                                           Margin="0,2,10,0"
                                           VerticalAlignment="Top">
                                        <LucideIcon VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Size="14"
                                                   Foreground="{DynamicResource AccentBrand}">
                                            <LucideIcon.Kind>
                                                <Binding Path="Type" Converter="{StaticResource EntityTypeToIconConverter}"/>
                                            </LucideIcon.Kind>
                                        </LucideIcon>
                                    </Border>

                                    <!-- Entity Name -->
                                    <Grid Grid.Column="1"
                                          Grid.Row="0"
                                          ColumnDefinitions="*,Auto"
                                          ColumnSpacing="8">
                                        <TextBlock Text="{Binding Name}"
                                                  FontSize="13"
                                                  FontWeight="Medium"
                                                  Foreground="{DynamicResource AppForeground}"
                                                  VerticalAlignment="Top"
                                                  TextWrapping="Wrap"
                                                  ToolTip.Tip="{Binding Name}"/>
                                        <TextBlock Grid.Column="1"
                                                  Text="{Binding MessageCount, StringFormat='{}{0:N0}'}"
                                                  FontSize="12"
                                                  FontWeight="SemiBold"
                                                  Foreground="{DynamicResource AppForeground}"
                                                  VerticalAlignment="Top"
                                                  HorizontalAlignment="Right"/>
                                    </Grid>

                                    <!-- Subtitle -->
                                    <TextBlock Grid.Column="1"
                                              Grid.Row="1"
                                              Text="{Binding DisplaySubtitle}"
                                              FontSize="11"
                                              Foreground="{DynamicResource SubtleForeground}"
                                              VerticalAlignment="Center"
                                              IsVisible="{Binding DisplaySubtitle, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                                    <!-- Slim Progress -->
                                    <Grid Grid.Column="1"
                                          Grid.Row="2"
                                          ColumnDefinitions="*,Auto"
                                          ColumnSpacing="8"
                                          VerticalAlignment="Center">
                                        <ProgressBar Grid.Column="0"
                                                    Value="{Binding PercentageOfTotal}"
                                                    Maximum="100"
                                                    Height="3"
                                                    MinWidth="120"
                                                    Background="{DynamicResource InputBackground}"
                                                    Foreground="{DynamicResource AccentBrand}"/>
                                        <TextBlock Grid.Column="1"
                                                  Text="{Binding PercentageOfTotal, StringFormat='{}{0:F0}%'}"
                                                  FontSize="11"
                                                  Foreground="{DynamicResource SubtleForeground}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
