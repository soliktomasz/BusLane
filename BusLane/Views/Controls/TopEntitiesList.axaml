<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BusLane.ViewModels.Dashboard;assembly=BusLane"
             mc:Ignorable="d"
             x:Class="BusLane.Views.Controls.TopEntitiesList"
             x:DataType="vm:TopEntitiesListViewModel">

    <Border Classes="card" Padding="0">
        <Grid RowDefinitions="Auto,*">
            <!-- Header -->
            <Border Grid.Row="0" 
                    BorderBrush="{DynamicResource BorderDefault}" 
                    BorderThickness="0,0,0,1" 
                    Padding="16">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <LucideIcon Kind="ListOrdered" Size="18" Foreground="{DynamicResource AccentBrand}"/>
                    <TextBlock Text="{Binding Title}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimary}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Entities List -->
            <ScrollViewer Grid.Row="1"
                         VerticalScrollBarVisibility="Auto"
                         MaxHeight="300">
                <ItemsControl ItemsSource="{Binding Entities}" Margin="16,12">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto,*,Auto" 
                                  Margin="0,0,0,12">
                                <!-- Entity Icon -->
                                <Border Grid.Column="0"
                                       Background="{DynamicResource HoverBackground}"
                                       CornerRadius="4"
                                       Padding="8,6"
                                       Margin="0,0,12,0">
                                    <TextBlock Text="{Binding Type, Converter={StaticResource EntityTypeToIconConverter}}"
                                              FontSize="14"
                                              VerticalAlignment="Center"/>
                                </Border>

                                <!-- Entity Name -->
                                <TextBlock Grid.Column="1"
                                          Text="{Binding Name}"
                                          FontSize="14"
                                          Foreground="{DynamicResource TextPrimary}"
                                          VerticalAlignment="Center"
                                          TextTrimming="CharacterEllipsis"/>

                                <!-- Progress Bar with Count -->
                                <StackPanel Grid.Column="2"
                                           Orientation="Horizontal"
                                           HorizontalAlignment="Right"
                                           Spacing="12">
                                    <ProgressBar Value="{Binding PercentageOfTotal}"
                                                Maximum="100"
                                                Width="80"
                                                Height="6"
                                                Background="{DynamicResource InputBackground}"
                                                Foreground="{DynamicResource AccentBrand}"/>
                                    <TextBlock Text="{Binding MessageCount, StringFormat='{}{0:N0}'}"
                                              FontSize="13"
                                              Foreground="{DynamicResource SubtleForeground}"
                                              Width="55"
                                              TextAlignment="Right"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
