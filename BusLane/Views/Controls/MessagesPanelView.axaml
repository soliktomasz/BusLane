<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BusLane.ViewModels"
             xmlns:models="using:BusLane.Models"
             xmlns:converters="using:BusLane.Converters"
             x:Class="BusLane.Views.Controls.MessagesPanelView"
             x:DataType="vm:MainWindowViewModel">

    <UserControl.Resources>
        <converters:MessageSelectionConverter x:Key="MessageSelectionConverter"/>
    </UserControl.Resources>

    <Border Classes="card" Padding="0">
        <Grid RowDefinitions="Auto,*">
            <!-- Header Bar with Tabs and Actions -->
            <Border Grid.Row="0" BorderBrush="{DynamicResource BorderDefault}" BorderThickness="0,0,0,1" Padding="16,16,16,12">
                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
                    <!-- Title and Actions Row -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Messages" Classes="heading" VerticalAlignment="Center"/>
                            <!-- Send Message Button (compact, inline) -->
                            <Button Classes="primary small"
                                    Command="{Binding OpenSendMessagePopupCommand}"
                                    Padding="12,6"
                                    VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <LucideIcon Kind="Plus" Size="12"/>
                                    <TextBlock Text="Send"/>
                                </StackPanel>
                                <Button.IsVisible>
                                    <MultiBinding Converter="{x:Static BoolConverters.Or}">
                                        <Binding Path="CurrentNavigation.SelectedQueue" Converter="{x:Static ObjectConverters.IsNotNull}"/>
                                        <Binding Path="CurrentNavigation.SelectedTopic" Converter="{x:Static ObjectConverters.IsNotNull}"/>
                                    </MultiBinding>
                                </Button.IsVisible>
                            </Button>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
                            <!-- Multi-select toggle button -->
                            <ToggleButton Classes="subtle small"
                                          IsChecked="{Binding CurrentMessageOps.IsMultiSelectMode, Mode=TwoWay}"
                                          ToolTip.Tip="Toggle multi-select mode (âŒ˜M / Ctrl+M)"
                                          Padding="8,8">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <LucideIcon Kind="Check" Size="12"/>
                                    <TextBlock Text="Select"/>
                                </StackPanel>
                            </ToggleButton>
                            <Button Classes="subtle small"
                                    Content="{Binding CurrentMessageOps.SortButtonText}"
                                    Command="{Binding ToggleSortOrderCommand}"
                                    ToolTip.Tip="Toggle sort order"
                                    Padding="8,8"/>
                            <Button Classes="subtle small"
                                    Command="{Binding LoadMessagesCommand}"
                                    Padding="8,8">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <LucideIcon Kind="RefreshCw" Size="12"/>
                                    <TextBlock Text="Refresh"/>
                                </StackPanel>
                            </Button>
                            <Border Width="1" Background="{DynamicResource BorderDefault}" Margin="4,4"/>
                            <Button Classes="danger-subtle small"
                                    Command="{Binding PurgeMessagesCommand}"
                                    Padding="8,8">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <LucideIcon Kind="Trash2" Size="12"/>
                                    <TextBlock Text="Purge"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Bulk Actions Bar (visible when multi-select mode is active) -->
                    <Border Grid.Row="1"
                            Background="{DynamicResource SurfaceAccent}"
                            CornerRadius="6"
                            Padding="12,8"
                            IsVisible="{Binding CurrentMessageOps.IsMultiSelectMode}">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                                <TextBlock Text="{Binding CurrentMessageOps.SelectedMessagesCount, StringFormat='{}{0} selected'}"
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           VerticalAlignment="Center"/>
                                <Button Classes="subtle small"
                                        Content="Select All"
                                        Command="{Binding SelectAllMessagesCommand}"
                                        Padding="8,4"/>
                                <Button Classes="subtle small"
                                        Content="Deselect All"
                                        Command="{Binding DeselectAllMessagesCommand}"
                                        Padding="8,4"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="6">
                                <Button Classes="primary small"
                                        Command="{Binding BulkResendMessagesCommand}"
                                        Padding="12,6"
                                        ToolTip.Tip="Resend selected messages">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <LucideIcon Kind="Send" Size="12"/>
                                        <TextBlock Text="Resend"/>
                                    </StackPanel>
                                </Button>
                                <Button Classes="warning small"
                                        Command="{Binding ResubmitDeadLetterMessagesAsyncCommand}"
                                        IsVisible="{Binding CurrentNavigation.ShowDeadLetter}"
                                        Padding="12,6"
                                        ToolTip.Tip="Resubmit selected messages from dead letter queue">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <LucideIcon Kind="RefreshCw" Size="12"/>
                                        <TextBlock Text="Resubmit"/>
                                    </StackPanel>
                                </Button>
                                <Button Classes="danger small"
                                        Command="{Binding BulkDeleteMessagesAsyncCommand}"
                                        Padding="12,6"
                                        ToolTip.Tip="Delete selected messages">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <LucideIcon Kind="X" Size="12"/>
                                        <TextBlock Text="Delete"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Search Row -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource SurfaceSubtle}"
                            CornerRadius="6"
                            Padding="8,8">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <LucideIcon Grid.Column="0"
                                      Kind="Search"
                                      Size="16"
                                      Foreground="{DynamicResource MutedForeground}"
                                      Margin="4,0,8,0"
                                      VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="MessageSearchTextBox"
                                     Text="{Binding CurrentMessageOps.MessageSearchText, Mode=TwoWay}"
                                     Watermark="Search by message ID, body, correlation ID, subject..."
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="0,4"
                                     FontSize="13"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"/>
                            <Button Grid.Column="2"
                                    Classes="subtle small"
                                    Command="{Binding ClearMessageSearchCommand}"
                                    IsVisible="{Binding CurrentMessageOps.MessageSearchText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                    Padding="4"
                                    ToolTip.Tip="Clear search">
                                <LucideIcon Kind="X" Size="12"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Tab Content Area -->
            <TabControl Grid.Row="1"
                        SelectedIndex="{Binding CurrentNavigation.SelectedMessageTabIndex}">

                <TabItem Header="Active Messages">
                    <!-- Loading indicator for messages -->
                    <TabItem.Content>
                        <Grid>
                            <ListBox ItemsSource="{Binding CurrentMessageOps.FilteredMessages}"
                             SelectedItem="{Binding CurrentMessageOps.SelectedMessage}"
                             Background="Transparent"
                             Padding="8"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="models:MessageInfo">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <!-- Checkbox for multi-select mode -->
                                        <CheckBox Grid.Column="0"
                                                  IsVisible="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CurrentMessageOps.IsMultiSelectMode}"
                                                  Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ToggleMessageSelectionCommand}"
                                                  CommandParameter="{Binding}"
                                                  Margin="0,0,8,0"
                                                  VerticalAlignment="Center">
                                            <CheckBox.IsChecked>
                                                <MultiBinding Converter="{StaticResource MessageSelectionConverter}">
                                                    <Binding Path="."/>
                                                    <Binding Path="$parent[Window].((vm:MainWindowViewModel)DataContext).CurrentMessageOps.SelectedMessages"/>
                                                    <Binding Path="$parent[Window].((vm:MainWindowViewModel)DataContext).CurrentMessageOps.SelectionVersion"/>
                                                </MultiBinding>
                                            </CheckBox.IsChecked>
                                        </CheckBox>
                                    <Button Grid.Column="1"
                                            Classes="subtle"
                                            Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).SelectMessageCommand}"
                                            CommandParameter="{Binding}"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            Padding="12,12"
                                            Margin="0,2">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Resend"
                                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ResendMessageCommand}"
                                                          CommandParameter="{Binding}">
                                                    <MenuItem.Icon>
                                                        <LucideIcon Kind="Send" Size="16"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Clone"
                                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CloneMessageCommand}"
                                                          CommandParameter="{Binding}">
                                                    <MenuItem.Icon>
                                                        <LucideIcon Kind="Pencil" Size="16"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                        <StackPanel>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding MessageId}"
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding EnqueuedTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                                                           Classes="caption"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource MutedForeground}"/>
                                            </Grid>
                                            <TextBlock Text="{Binding BodyPreview}"
                                                       Classes="caption"
                                                       FontSize="11"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxLines="2"
                                                       Margin="0,6,0,0"
                                                       Foreground="{DynamicResource SubtleForeground}"
                                                       IsVisible="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).EnableMessagePreview}"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Spacing="6">
                                                <Border Classes="badge-muted" Padding="6,3">
                                                    <TextBlock Text="{Binding SequenceNumber, StringFormat='Seq: {0}'}"
                                                               Foreground="{DynamicResource SubtleForeground}" FontSize="10"/>
                                                </Border>
                                                <Border Classes="badge-muted" Padding="6,3" IsVisible="{Binding DeliveryCount}">
                                                    <TextBlock Text="{Binding DeliveryCount, StringFormat='Delivery: {0}'}"
                                                               Foreground="{DynamicResource SubtleForeground}" FontSize="10"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                            <!-- Beautiful centered loading overlay -->
                            <Border IsVisible="{Binding CurrentMessageOps.IsLoadingMessages}"
                                    Background="{DynamicResource LoadingOverlay}"
                                    IsHitTestVisible="True">
                                <Border Background="{DynamicResource CardBackground}"
                                        Padding="32,24"
                                        CornerRadius="12"
                                        BorderThickness="1"
                                        BorderBrush="{DynamicResource BorderDefault}"
                                        BoxShadow="0 8 32 0 #40000000"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        MinWidth="280">
                                    <StackPanel Spacing="16" HorizontalAlignment="Center">
                                        <ProgressBar IsIndeterminate="True" Width="200" Height="4"
                                                     Foreground="{DynamicResource AccentBrand}"
                                                     Background="{DynamicResource BorderDefault}"/>
                                        <StackPanel Spacing="8" HorizontalAlignment="Center">
                                            <TextBlock Text="Loading Messages"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource AppForeground}"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Please wait while we fetch the messages..."
                                                       FontSize="13"
                                                       Foreground="{DynamicResource SubtleForeground}"
                                                       HorizontalAlignment="Center"
                                                       TextAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Border>
                        </Grid>
                    </TabItem.Content>
                </TabItem>

                <TabItem Header="Dead Letter">
                    <!-- Loading indicator for dead letter messages -->
                    <TabItem.Content>
                        <Grid>
                            <ListBox ItemsSource="{Binding CurrentMessageOps.FilteredMessages}"
                             SelectedItem="{Binding CurrentMessageOps.SelectedMessage}"
                             Background="Transparent"
                             Padding="8"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="models:MessageInfo">
                                    <Grid ColumnDefinitions="Auto,*">
                                        <!-- Checkbox for multi-select mode -->
                                        <CheckBox Grid.Column="0"
                                                  IsVisible="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CurrentMessageOps.IsMultiSelectMode}"
                                                  Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ToggleMessageSelectionCommand}"
                                                  CommandParameter="{Binding}"
                                                  Margin="0,0,8,0"
                                                  VerticalAlignment="Center">
                                            <CheckBox.IsChecked>
                                                <MultiBinding Converter="{StaticResource MessageSelectionConverter}">
                                                    <Binding Path="."/>
                                                    <Binding Path="$parent[Window].((vm:MainWindowViewModel)DataContext).CurrentMessageOps.SelectedMessages"/>
                                                    <Binding Path="$parent[Window].((vm:MainWindowViewModel)DataContext).CurrentMessageOps.SelectionVersion"/>
                                                </MultiBinding>
                                            </CheckBox.IsChecked>
                                        </CheckBox>
                                    <Button Grid.Column="1"
                                            Classes="subtle"
                                            Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).SelectMessageCommand}"
                                            CommandParameter="{Binding}"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            Padding="12,12"
                                            Margin="0,2">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Resend"
                                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ResendMessageCommand}"
                                                          CommandParameter="{Binding}">
                                                    <MenuItem.Icon>
                                                        <LucideIcon Kind="Send" Size="16"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Clone"
                                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CloneMessageCommand}"
                                                          CommandParameter="{Binding}">
                                                    <MenuItem.Icon>
                                                        <LucideIcon Kind="Pencil" Size="16"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                        <StackPanel>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding MessageId}"
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding EnqueuedTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                                                           Classes="caption"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource MutedForeground}"/>
                                            </Grid>
                                            <!-- Dead Letter Reason -->
                                            <Border Background="{DynamicResource SurfaceDanger}" Padding="8,4" Margin="0,6,0,0" CornerRadius="4"
                                                    IsVisible="{Binding DeadLetterReason, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                <TextBlock Text="{Binding DeadLetterReason}"
                                                           Foreground="{DynamicResource TextDanger}"
                                                           FontSize="11"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </Border>
                                            <TextBlock Text="{Binding BodyPreview}"
                                                       Classes="caption"
                                                       FontSize="11"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxLines="2"
                                                       Margin="0,6,0,0"
                                                       Foreground="{DynamicResource SubtleForeground}"
                                                       IsVisible="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).EnableMessagePreview}"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Spacing="6">
                                                <Border Classes="badge-muted" Padding="6,3">
                                                    <TextBlock Text="{Binding SequenceNumber, StringFormat='Seq: {0}'}"
                                                               Foreground="{DynamicResource SubtleForeground}" FontSize="10"/>
                                                </Border>
                                                <Border Classes="badge-muted" Padding="6,3" IsVisible="{Binding DeliveryCount}">
                                                    <TextBlock Text="{Binding DeliveryCount, StringFormat='Delivery: {0}'}"
                                                               Foreground="{DynamicResource SubtleForeground}" FontSize="10"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                            <!-- Beautiful centered loading overlay -->
                            <Border IsVisible="{Binding CurrentMessageOps.IsLoadingMessages}"
                                    Background="{DynamicResource LoadingOverlay}"
                                    IsHitTestVisible="True">
                                <Border Background="{DynamicResource CardBackground}"
                                        Padding="32,24"
                                        CornerRadius="12"
                                        BorderThickness="1"
                                        BorderBrush="{DynamicResource BorderDefault}"
                                        BoxShadow="0 8 32 0 #40000000"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        MinWidth="280">
                                    <StackPanel Spacing="16" HorizontalAlignment="Center">
                                        <ProgressBar IsIndeterminate="True" Width="200" Height="4"
                                                     Foreground="{DynamicResource AccentBrand}"
                                                     Background="{DynamicResource BorderDefault}"/>
                                        <StackPanel Spacing="8" HorizontalAlignment="Center">
                                            <TextBlock Text="Loading Dead Letter Messages"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource AppForeground}"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="Please wait while we fetch the dead letter messages..."
                                                       FontSize="13"
                                                       Foreground="{DynamicResource SubtleForeground}"
                                                       HorizontalAlignment="Center"
                                                       TextAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Border>
                        </Grid>
                    </TabItem.Content>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</UserControl>

