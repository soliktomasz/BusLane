<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BusLane.ViewModels"
             xmlns:models="using:BusLane.Models"
             x:Class="BusLane.Views.Controls.MessagesPanelView"
             x:DataType="vm:MainWindowViewModel">

    <Border Classes="card" Padding="0">
        <Grid RowDefinitions="Auto,*">
            <!-- Header Bar with Tabs and Actions -->
            <Border Grid.Row="0" BorderBrush="{DynamicResource BorderDefault}" BorderThickness="0,0,0,1" Padding="16,16,16,12">
                <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                    <!-- Title and Actions Row -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Messages" Classes="heading" VerticalAlignment="Center"/>
                            <!-- Send Message Button (compact, inline) -->
                            <Button Classes="primary small"
                                    Content="+ Send"
                                    Command="{Binding OpenSendMessagePopupCommand}"
                                    Padding="12,6"
                                    VerticalAlignment="Center">
                                <Button.IsVisible>
                                    <MultiBinding Converter="{x:Static BoolConverters.Or}">
                                        <Binding Path="SelectedQueue" Converter="{x:Static ObjectConverters.IsNotNull}"/>
                                        <Binding Path="SelectedTopic" Converter="{x:Static ObjectConverters.IsNotNull}"/>
                                    </MultiBinding>
                                </Button.IsVisible>
                            </Button>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6">
                            <Button Classes="subtle small"
                                    Content="{Binding SortButtonText}"
                                    Command="{Binding ToggleSortOrderCommand}"
                                    ToolTip.Tip="Toggle sort order"
                                    Padding="8,6"/>
                            <Button Classes="subtle small"
                                    Content="â†» Refresh"
                                    Command="{Binding LoadMessagesCommand}"
                                    Padding="8,6"/>
                            <Border Width="1" Background="{DynamicResource BorderDefault}" Margin="4,4"/>
                            <Button Classes="danger-subtle small"
                                    Content="Purge"
                                    Command="{Binding PurgeMessagesCommand}"
                                    Padding="8,6"/>
                        </StackPanel>
                    </Grid>

                    <!-- Search Row -->
                    <Border Grid.Row="1"
                            Background="{DynamicResource SurfaceSubtle}"
                            CornerRadius="6"
                            Padding="8,6">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <PathIcon Grid.Column="0"
                                      Data="{StaticResource IconSearch}"
                                      Width="14" Height="14"
                                      Foreground="{DynamicResource MutedForeground}"
                                      Margin="4,0,8,0"
                                      VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding MessageSearchText, Mode=TwoWay}"
                                     Watermark="Search by message ID, body, correlation ID, subject..."
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="0,4"
                                     FontSize="13"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"/>
                            <Button Grid.Column="2"
                                    Classes="subtle small"
                                    Command="{Binding ClearMessageSearchCommand}"
                                    IsVisible="{Binding MessageSearchText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                    Padding="4"
                                    ToolTip.Tip="Clear search">
                                <PathIcon Data="{StaticResource IconClose}" Width="12" Height="12"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Tab Content Area -->
            <TabControl Grid.Row="1"
                        SelectedIndex="{Binding SelectedMessageTabIndex}">

                <TabItem Header="Active Messages">
                    <!-- Loading indicator for messages -->
                    <TabItem.Content>
                        <Grid>
                            <Border IsVisible="{Binding IsLoadingMessages}"
                                    VerticalAlignment="Top"
                                    Margin="16,16,16,0"
                                    Padding="16,12"
                                    Background="{DynamicResource SurfaceSubtle}"
                                    CornerRadius="8">
                                <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                                    <ProgressBar IsIndeterminate="True" Width="80" Height="4" />
                                    <TextBlock Text="Loading messages..." FontSize="13" Foreground="{DynamicResource SubtleForeground}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ListBox ItemsSource="{Binding FilteredMessages}"
                             SelectedItem="{Binding SelectedMessage}"
                             Background="Transparent"
                             Padding="8"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="models:MessageInfo">
                                    <Button Classes="subtle"
                                            Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).SelectMessageCommand}"
                                            CommandParameter="{Binding}"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            Padding="12,10"
                                            Margin="0,2">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Resend"
                                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ResendMessageCommand}"
                                                          CommandParameter="{Binding}">
                                                    <MenuItem.Icon>
                                                        <PathIcon Data="{StaticResource IconSend}" Width="14" Height="14"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Clone"
                                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CloneMessageCommand}"
                                                          CommandParameter="{Binding}">
                                                    <MenuItem.Icon>
                                                        <PathIcon Data="{StaticResource IconEdit}" Width="14" Height="14"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                        <StackPanel>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding MessageId}"
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding EnqueuedTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                                                           Classes="caption"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource MutedForeground}"/>
                                            </Grid>
                                            <TextBlock Text="{Binding BodyPreview}"
                                                       Classes="caption"
                                                       FontSize="11"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxLines="2"
                                                       Margin="0,6,0,0"
                                                       Foreground="{DynamicResource SubtleForeground}"
                                                       IsVisible="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).EnableMessagePreview}"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Spacing="6">
                                                <Border Classes="badge-muted" Padding="6,3">
                                                    <TextBlock Text="{Binding SequenceNumber, StringFormat='Seq: {0}'}"
                                                               Foreground="{DynamicResource SubtleForeground}" FontSize="10"/>
                                                </Border>
                                                <Border Classes="badge-muted" Padding="6,3" IsVisible="{Binding DeliveryCount}">
                                                    <TextBlock Text="{Binding DeliveryCount, StringFormat='Delivery: {0}'}"
                                                               Foreground="{DynamicResource SubtleForeground}" FontSize="10"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        </Grid>
                    </TabItem.Content>
                </TabItem>

                <TabItem Header="Dead Letter">
                    <!-- Loading indicator for dead letter messages -->
                    <TabItem.Content>
                        <Grid>
                            <Border IsVisible="{Binding IsLoadingMessages}"
                                    VerticalAlignment="Top"
                                    Margin="16,16,16,0"
                                    Padding="16,12"
                                    Background="{DynamicResource SurfaceSubtle}"
                                    CornerRadius="8">
                                <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                                    <ProgressBar IsIndeterminate="True" Width="80" Height="4" />
                                    <TextBlock Text="Loading messages..." FontSize="13" Foreground="{DynamicResource SubtleForeground}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ListBox ItemsSource="{Binding FilteredMessages}"
                             SelectedItem="{Binding SelectedMessage}"
                             Background="Transparent"
                             Padding="8"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="models:MessageInfo">
                                    <Button Classes="subtle"
                                            Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).SelectMessageCommand}"
                                            CommandParameter="{Binding}"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            Padding="12,10"
                                            Margin="0,2">
                                        <Button.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Resend"
                                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).ResendMessageCommand}"
                                                          CommandParameter="{Binding}">
                                                    <MenuItem.Icon>
                                                        <PathIcon Data="{StaticResource IconSend}" Width="14" Height="14"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Clone"
                                                          Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).CloneMessageCommand}"
                                                          CommandParameter="{Binding}">
                                                    <MenuItem.Icon>
                                                        <PathIcon Data="{StaticResource IconEdit}" Width="14" Height="14"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                        <StackPanel>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding MessageId}"
                                                           FontWeight="SemiBold"
                                                           FontSize="12"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding EnqueuedTime, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                                                           Classes="caption"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource MutedForeground}"/>
                                            </Grid>
                                            <!-- Dead Letter Reason -->
                                            <Border Background="{DynamicResource SurfaceDanger}" Padding="8,4" Margin="0,6,0,0" CornerRadius="4"
                                                    IsVisible="{Binding DeadLetterReason, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                <TextBlock Text="{Binding DeadLetterReason}"
                                                           Foreground="{DynamicResource TextDanger}"
                                                           FontSize="11"
                                                           TextTrimming="CharacterEllipsis"/>
                                            </Border>
                                            <TextBlock Text="{Binding BodyPreview}"
                                                       Classes="caption"
                                                       FontSize="11"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxLines="2"
                                                       Margin="0,6,0,0"
                                                       Foreground="{DynamicResource SubtleForeground}"
                                                       IsVisible="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).EnableMessagePreview}"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Spacing="6">
                                                <Border Classes="badge-muted" Padding="6,3">
                                                    <TextBlock Text="{Binding SequenceNumber, StringFormat='Seq: {0}'}"
                                                               Foreground="{DynamicResource SubtleForeground}" FontSize="10"/>
                                                </Border>
                                                <Border Classes="badge-muted" Padding="6,3" IsVisible="{Binding DeliveryCount}">
                                                    <TextBlock Text="{Binding DeliveryCount, StringFormat='Delivery: {0}'}"
                                                               Foreground="{DynamicResource SubtleForeground}" FontSize="10"/>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        </Grid>
                    </TabItem.Content>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</UserControl>

