<!-- BusLane/Views/Controls/TabBarView.axaml -->
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BusLane.ViewModels"
             xmlns:core="using:BusLane.ViewModels.Core"
             xmlns:converters="using:BusLane.Converters"
             x:Class="BusLane.Views.Controls.TabBarView"
             x:DataType="vm:MainWindowViewModel">

    <Border Background="{DynamicResource TabNavBackground}"
            BorderBrush="{DynamicResource BorderDefault}"
            BorderThickness="0,0,0,1"
            Padding="12,8"
            IsVisible="{Binding HasActiveTabs}">
        <Grid ColumnDefinitions="*,Auto">
            <!-- Tab List -->
            <ScrollViewer Grid.Column="0"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ConnectionTabs}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="core:ConnectionTabViewModel">
                            <Border Classes="tab-border"
                                    Padding="14,10"
                                    MinWidth="140"
                                    MaxWidth="220"
                                    PointerPressed="TabBorder_PointerPressed"
                                    Cursor="Hand">
                                <Border.Background>
                                    <MultiBinding Converter="{x:Static converters:TabActiveConverter.Instance}">
                                        <Binding Path="TabId"/>
                                        <Binding Path="$parent[UserControl].((vm:MainWindowViewModel)DataContext).ActiveTab.TabId"/>
                                    </MultiBinding>
                                </Border.Background>
                                <Border.BorderBrush>
                                    <MultiBinding Converter="{x:Static converters:TabActiveBorderConverter.Instance}">
                                        <Binding Path="TabId"/>
                                        <Binding Path="$parent[UserControl].((vm:MainWindowViewModel)DataContext).ActiveTab.TabId"/>
                                    </MultiBinding>
                                </Border.BorderBrush>
                                <Border.Styles>
                                    <Style Selector="Border.tab-border">
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                    <Style Selector="Border.tab-border:pointerover">
                                        <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                                    </Style>
                                </Border.Styles>
                                <Border.BoxShadow>
                                    <MultiBinding Converter="{x:Static converters:TabActiveElevationConverter.Instance}">
                                        <Binding Path="TabId"/>
                                        <Binding Path="$parent[UserControl].((vm:MainWindowViewModel)DataContext).ActiveTab.TabId"/>
                                    </MultiBinding>
                                </Border.BoxShadow>

                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <!-- Loading Indicator (shown while connecting) -->
                                    <Border Grid.Column="0"
                                            Width="14" Height="14"
                                            Margin="0,0,8,0"
                                            VerticalAlignment="Center"
                                            CornerRadius="7"
                                            Background="{DynamicResource SurfaceSubtle}"
                                            BorderBrush="{DynamicResource AccentBrand}"
                                            BorderThickness="2"
                                            IsVisible="{Binding IsLoading}">
                                        <Border.RenderTransform>
                                            <RotateTransform/>
                                        </Border.RenderTransform>
                                        <Border.Styles>
                                            <Style Selector="Border[IsVisible=True]">
                                                <Style.Animations>
                                                    <Animation Duration="0:0:1" IterationCount="INFINITE">
                                                        <KeyFrame Cue="0%">
                                                            <Setter Property="Opacity" Value="0.4"/>
                                                        </KeyFrame>
                                                        <KeyFrame Cue="50%">
                                                            <Setter Property="Opacity" Value="1"/>
                                                        </KeyFrame>
                                                        <KeyFrame Cue="100%">
                                                            <Setter Property="Opacity" Value="0.4"/>
                                                        </KeyFrame>
                                                    </Animation>
                                                </Style.Animations>
                                            </Style>
                                        </Border.Styles>
                                    </Border>

                                    <!-- Connection Status Indicator (shown when connected and not loading) -->
                                    <Ellipse Grid.Column="0"
                                             Width="8" Height="8"
                                             Margin="0,0,8,0"
                                             VerticalAlignment="Center">
                                        <Ellipse.IsVisible>
                                            <MultiBinding Converter="{x:Static BoolConverters.And}">
                                                <Binding Path="IsConnected"/>
                                                <Binding Path="!IsLoading"/>
                                            </MultiBinding>
                                        </Ellipse.IsVisible>
                                        <Ellipse.Styles>
                                            <Style Selector="Ellipse">
                                                <Setter Property="Fill" Value="{DynamicResource TextSuccess}"/>
                                            </Style>
                                        </Ellipse.Styles>
                                    </Ellipse>

                                    <!-- Tab Title & Subtitle -->
                                    <StackPanel Grid.Column="1" Spacing="2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding TabTitle}"
                                                   FontSize="13"
                                                   TextTrimming="CharacterEllipsis">
                                            <TextBlock.FontWeight>
                                                <MultiBinding Converter="{x:Static converters:TabActiveFontWeightConverter.Instance}">
                                                    <Binding Path="TabId"/>
                                                    <Binding Path="$parent[UserControl].((vm:MainWindowViewModel)DataContext).ActiveTab.TabId"/>
                                                </MultiBinding>
                                            </TextBlock.FontWeight>
                                            <TextBlock.Foreground>
                                                <MultiBinding Converter="{x:Static converters:TabActiveForegroundConverter.Instance}">
                                                    <Binding Path="TabId"/>
                                                    <Binding Path="$parent[UserControl].((vm:MainWindowViewModel)DataContext).ActiveTab.TabId"/>
                                                </MultiBinding>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <TextBlock Text="{Binding TabSubtitle}"
                                                   FontSize="11"
                                                   Opacity="0.65"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>

                                    <!-- Close Button -->
                                    <Button Grid.Column="2"
                                            Classes="subtle"
                                            Command="{Binding $parent[UserControl].((vm:MainWindowViewModel)DataContext).CloseTabCommand}"
                                            CommandParameter="{Binding TabId}"
                                            Padding="4"
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            ToolTip.Tip="Close tab">
                                        <LucideIcon Kind="X" Size="12"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                <!-- New Tab Button -->
                <Button Classes="subtle icon-button"
                        Command="{Binding OpenConnectionLibraryCommand}"
                        Padding="6"
                        ToolTip.Tip="Open new connection tab">
                    <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                        <LucideIcon Kind="Plus" Size="14"/>
                        <TextBlock Text="New Tab" FontSize="11"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
