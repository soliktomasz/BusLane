<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Microsoft Fluent Design 2 System -->
    <!-- Colors based on Fluent 2 semantic tokens with theme support -->

    <Style Selector="Window">
        <Setter Property="Background" Value="{DynamicResource AppBackground}"/>
        <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI, San Francisco, Helvetica Neue, Arial"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
    </Style>

    <!-- Typography - Fluent 2 Type Ramp -->
    <Style Selector="TextBlock.display">
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="LineHeight" Value="52"/>
    </Style>

    <Style Selector="TextBlock.title">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="LineHeight" Value="32"/>
    </Style>

    <Style Selector="TextBlock.title-large">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
    </Style>

    <Style Selector="TextBlock.title-small">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="LineHeight" Value="28"/>
    </Style>

    <Style Selector="TextBlock.heading-large">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="LineHeight" Value="24"/>
    </Style>

    <Style Selector="TextBlock.subtitle">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource SubtleForeground}"/>
        <Setter Property="LineHeight" Value="18"/>
    </Style>

    <Style Selector="TextBlock.body">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

    <Style Selector="TextBlock.body-strong">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
    </Style>

    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource SubtleForeground}"/>
        <Setter Property="LineHeight" Value="16"/>
    </Style>

    <Style Selector="TextBlock.heading">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="LineHeight" Value="22"/>
    </Style>

    <!-- Buttons - Fluent 2 -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="{DynamicResource AccentBrand}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextOnBrand}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource AccentBrandHover}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style Selector="Button.primary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource AccentBrandPressed}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style Selector="Button.primary:focus-visible /template/ ContentPresenter">
        <Setter Property="BoxShadow" Value="0 0 0 2 #FFFFFF"/>
    </Style>

    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderStrong}"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceSubtle}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderStrong}"/>
    </Style>

    <Style Selector="Button.secondary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource TabNavBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderStrong}"/>
    </Style>

    <Style Selector="Button.secondary:focus-visible /template/ ContentPresenter">
        <Setter Property="BoxShadow" Value="0 0 0 2 #0078D4"/>
    </Style>

    <Style Selector="Button.subtle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.subtle:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
    </Style>

    <Style Selector="Button.subtle:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PressedBackground}"/>
    </Style>

    <Style Selector="Button.subtle:focus-visible /template/ ContentPresenter">
        <Setter Property="BoxShadow" Value="0 0 0 2 #0078D4"/>
    </Style>

    <Style Selector="Button.danger">
        <Setter Property="Background" Value="{DynamicResource TextDanger}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextOnBrand}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.danger:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource TextDangerHover}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style Selector="Button.danger:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource TextDanger}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style Selector="Button.danger:focus-visible /template/ ContentPresenter">
        <Setter Property="BoxShadow" Value="0 0 0 2 #FFFFFF"/>
    </Style>

    <Style Selector="Button.danger-outline">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TextDanger}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource TextDanger}"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.danger-outline:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceDanger}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextDanger}"/>
    </Style>

    <Style Selector="Button.danger-outline:focus-visible /template/ ContentPresenter">
        <Setter Property="BoxShadow" Value="0 0 0 2 #C50F1F"/>
    </Style>

    <Style Selector="Button.danger-subtle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TextDanger}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.danger-subtle:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceDanger}"/>
    </Style>

    <Style Selector="Button.danger-subtle:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceDanger}"/>
    </Style>

    <Style Selector="Button.danger-subtle:focus-visible /template/ ContentPresenter">
        <Setter Property="BoxShadow" Value="0 0 0 2 #C50F1F"/>
    </Style>

    <!-- Warning Button Styles -->
    <Style Selector="Button.warning">
        <Setter Property="Background" Value="{DynamicResource TextWarning}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextOnBrand}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button.warning:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource TextWarningHover}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style Selector="Button.warning:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource TextWarning}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style Selector="Button.warning:focus-visible /template/ ContentPresenter">
        <Setter Property="BoxShadow" Value="0 0 0 2 #FFFFFF"/>
    </Style>

    <Style Selector="Button.small">
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style Selector="Button.icon">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
    </Style>

    <Style Selector="Button.icon:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
    </Style>

    <Style Selector="Button.icon:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PressedBackground}"/>
    </Style>

    <Style Selector="Button.icon:focus-visible /template/ ContentPresenter">
        <Setter Property="BoxShadow" Value="0 0 0 2 #0078D4"/>
    </Style>

    <!-- ListBox - Fluent 2 with Virtualization Support -->
    <Style Selector="ListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
    </Style>

    <!-- ListBox for custom item templates (no default item selection styling) -->
    <Style Selector="ListBox.entity-list">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
    </Style>

    <Style Selector="ListBox.entity-list ListBoxItem">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Focusable" Value="False"/>
    </Style>

    <Style Selector="ListBox.entity-list ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="ListBox.entity-list ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="ListBoxItem">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
    </Style>

    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SelectedBackground}"/>
    </Style>

    <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrandHover}"/>
    </Style>

    <Style Selector="ListBoxItem:focus-visible /template/ ContentPresenter">
        <Setter Property="BoxShadow" Value="0 0 0 2 #0078D4"/>
    </Style>

    <!-- TabControl - Fluent 2 -->
    <Style Selector="TabControl">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style Selector="TabItem">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Foreground" Value="{DynamicResource SubtleForeground}"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="MinHeight" Value="44"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="TabItem:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
    </Style>

    <Style Selector="TabItem:selected">
        <Setter Property="Foreground" Value="{DynamicResource AccentBrand}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="TabItem:focus-visible">
        <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
    </Style>

    <!-- Input Controls - Fluent 2 -->
    <Style Selector="TextBox">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderStrong}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CaretBrush" Value="{DynamicResource AppForeground}"/>
        <Setter Property="SelectionBrush" Value="{DynamicResource AccentBrand}"/>
    </Style>

    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrand}"/>
        <Setter Property="BorderThickness" Value="1,1,1,2"/>
    </Style>

    <Style Selector="TextBox:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource SubtleForeground}"/>
    </Style>

    <Style Selector="ComboBox">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderStrong}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Background" Value="{DynamicResource InputBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style Selector="ComboBox:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource SubtleForeground}"/>
    </Style>

    <Style Selector="ComboBox:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrand}"/>
    </Style>

    <!-- Toggle/Pill Button - Fluent 2 style -->
    <Style Selector="ToggleButton.pill">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource SubtleForeground}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderStrong}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="ToggleButton.pill:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SubtleForeground}"/>
    </Style>

    <Style Selector="ToggleButton.pill:checked /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrand}"/>
        <Setter Property="Foreground" Value="{DynamicResource AccentBrand}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrand}"/>
    </Style>

    <Style Selector="ToggleButton.pill:focus-visible /template/ ContentPresenter">
        <Setter Property="BoxShadow" Value="0 0 0 2 #0078D4"/>
    </Style>

    <!-- Card - Fluent 2 with elevation system -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
        <Setter Property="BoxShadow" Value="0 2 4 0 #18000000"/>
        <Setter Property="Transitions">
            <Transitions>
                <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.card:pointerover">
        <Setter Property="BoxShadow" Value="0 4 8 0 #20000000"/>
    </Style>

    <Style Selector="Border.card-elevated">
        <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
        <Setter Property="BoxShadow" Value="0 4 12 0 #24000000"/>
        <Setter Property="Transitions">
            <Transitions>
                <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.card-elevated:pointerover">
        <Setter Property="BoxShadow" Value="0 8 16 0 #28000000"/>
    </Style>

    <!-- Navigation Pane / Sidebar - Fluent 2 -->
    <Style Selector="Border.sidebar">
        <Setter Property="Background" Value="{DynamicResource SidebarBackground}"/>
        <Setter Property="Width" Value="320"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>

    <!-- Badges - Fluent 2 with semantic colors -->
    <Style Selector="Border.badge">
        <Setter Property="Background" Value="{DynamicResource AccentBrand}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

    <Style Selector="Border.badge TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextOnBrand}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="Border.badge-warning">
        <Setter Property="Background" Value="{DynamicResource TextWarning}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

    <Style Selector="Border.badge-warning TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextOnBrand}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="Border.badge-danger">
        <Setter Property="Background" Value="{DynamicResource TextDanger}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

    <Style Selector="Border.badge-danger TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextOnBrand}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="Border.badge-success">
        <Setter Property="Background" Value="{DynamicResource TextSuccess}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

    <Style Selector="Border.badge-success TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextOnBrand}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="Border.badge-muted">
        <Setter Property="Background" Value="{DynamicResource BorderStrong}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="6,3"/>
    </Style>

    <Style Selector="Border.badge-muted TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>

    <Style Selector="Border.badge-info">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrand}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="6,3"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrand}"/>
    </Style>

    <Style Selector="Border.badge-info TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource AccentBrand}"/>
        <Setter Property="FontSize" Value="11"/>
    </Style>

    <!-- Environment Badge styles -->
    <Style Selector="Border.badge-env">
        <Setter Property="Background" Value="{DynamicResource SurfaceSubtle}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="6,3"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderStrong}"/>
    </Style>

    <Style Selector="Border.badge-env TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource SubtleForeground}"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>

    <!-- Tab Button RadioButton Style - Fluent 2 -->
    <Style Selector="RadioButton.tab-button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource SubtleForeground}"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}"
                        BorderThickness="0,0,0,2"
                        BorderBrush="Transparent"
                        x:Name="PART_Border">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="RadioButton.tab-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource AppForeground}"/>
    </Style>

    <Style Selector="RadioButton.tab-button:checked">
        <Setter Property="Foreground" Value="{DynamicResource AccentBrand}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="RadioButton.tab-button:checked /template/ Border#PART_Border">
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrand}"/>
    </Style>

    <Style Selector="RadioButton.tab-button:focus-visible">
        <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
    </Style>

    <!-- Separator - Fluent 2 -->
    <Style Selector="Separator">
        <Setter Property="Background" Value="{DynamicResource BorderDefault}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>

    <!-- ScrollViewer -->
    <Style Selector="ScrollViewer">
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <!-- Expander - Fluent 2 style -->
    <Style Selector="Expander">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

    <Style Selector="Expander /template/ ToggleButton#ExpanderHeader">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

    <Style Selector="Expander /template/ ToggleButton#ExpanderHeader:pointerover">
        <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
    </Style>

    <Style Selector="Expander /template/ Border#ExpanderContent">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <Style Selector="Expander /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

    <!-- Modal overlay - Fluent 2 with blur hint -->
    <Style Selector="Border.modal-overlay">
        <Setter Property="Background" Value="{DynamicResource ModalOverlay}"/>
    </Style>

    <Style Selector="Border.modal">
        <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderDefault}"/>
        <Setter Property="BoxShadow" Value="0 8 24 0 #32000000"/>
        <Setter Property="MaxWidth" Value="640"/>
        <Setter Property="MaxHeight" Value="560"/>
    </Style>

    <!-- Dialog size variants - Fluent 2 standardized sizes -->
    <Style Selector="Border.modal-small">
        <Setter Property="MaxWidth" Value="400"/>
        <Setter Property="MaxHeight" Value="400"/>
    </Style>

    <Style Selector="Border.modal-medium">
        <Setter Property="MaxWidth" Value="640"/>
        <Setter Property="MaxHeight" Value="560"/>
    </Style>

    <Style Selector="Border.modal-large">
        <Setter Property="MaxWidth" Value="900"/>
        <Setter Property="MaxHeight" Value="720"/>
    </Style>

    <!-- Progress - Fluent 2 accent color -->
    <Style Selector="ProgressBar">
        <Setter Property="Foreground" Value="{DynamicResource AccentBrand}"/>
        <Setter Property="Background" Value="{DynamicResource BorderDefault}"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>

    <!-- Info/Surface backgrounds - Fluent 2 -->
    <Style Selector="Border.surface-subtle">
        <Setter Property="Background" Value="{DynamicResource SurfaceSubtle}"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style Selector="Border.surface-brand">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrand}"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style Selector="Border.surface-danger">
        <Setter Property="Background" Value="{DynamicResource SurfaceDanger}"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style Selector="Border.surface-success">
        <Setter Property="Background" Value="{DynamicResource SurfaceSuccess}"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <Style Selector="Border.surface-warning">
        <Setter Property="Background" Value="{DynamicResource SurfaceWarning}"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- Entity Card Styles - Fluent 2 with smooth transitions -->
    <Style Selector="Border.entity-item">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.entity-item:pointerover">
        <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderMuted}"/>
    </Style>

    <Style Selector="Border.entity-item-selected">
        <Setter Property="Background" Value="{DynamicResource SelectedBackground}"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SelectedBorder}"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.entity-item-selected:pointerover">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrandHover}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrand}"/>
    </Style>

