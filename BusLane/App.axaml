<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:BusLane.Converters"
             x:Class="BusLane.App"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/AppStyles.axaml"/>
    </Application.Styles>
    
    <!-- Fluent Design 2 Theme Resources -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/Icons.axaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters for Live Stream, Charts, and Alerts -->
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:BoolToStatusColorConverter x:Key="BoolToStatusColorConverter"/>
            <converters:BoolToStatusTextConverter x:Key="BoolToStatusTextConverter"/>
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
            <converters:SeverityToColorConverter x:Key="SeverityToColorConverter"/>
            <converters:SeverityToBackgroundConverter x:Key="SeverityToBackgroundConverter"/>
            
            <!-- Additional theme resources -->
            <SolidColorBrush x:Key="DangerBackground" Color="#D13438"/>
            <SolidColorBrush x:Key="SuccessForeground" Color="#107C10"/>
            <SolidColorBrush x:Key="AccentSubtle" Color="#E6F2FB"/>
            <SolidColorBrush x:Key="SurfaceDefault" Color="#FFFFFF"/>
            
            <ResourceDictionary.ThemeDictionaries>
                <!-- Light Theme -->
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppBackground" Color="#F3F3F3"/>
                    <SolidColorBrush x:Key="AppForeground" Color="#1A1A1A"/>
                    <SolidColorBrush x:Key="SubtleForeground" Color="#616161"/>
                    <SolidColorBrush x:Key="MutedForeground" Color="#8A8A8A"/>
                    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="SidebarBackground" Color="#FAFAFA"/>
                    <SolidColorBrush x:Key="SurfaceSubtle" Color="#FAFAFA"/>
                    <SolidColorBrush x:Key="BorderDefault" Color="#E0E0E0"/>
                    <SolidColorBrush x:Key="BorderStrong" Color="#D1D1D1"/>
                    <SolidColorBrush x:Key="BorderMuted" Color="#E8E8E8"/>
                    <SolidColorBrush x:Key="AccentBrand" Color="#0F6CBD"/>
                    <SolidColorBrush x:Key="AccentBrandHover" Color="#115EA3"/>
                    <SolidColorBrush x:Key="AccentBrandPressed" Color="#0C4A7E"/>
                    <SolidColorBrush x:Key="TextOnBrand" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="SurfaceBrand" Color="#E6F2FB"/>
                    <SolidColorBrush x:Key="SurfaceBrandHover" Color="#D4E9F7"/>
                    <SolidColorBrush x:Key="SurfaceDanger" Color="#FCE9E8"/>
                    <SolidColorBrush x:Key="SurfaceSuccess" Color="#E6F4E6"/>
                    <SolidColorBrush x:Key="SurfaceWarning" Color="#FDF4E5"/>
                    <SolidColorBrush x:Key="TextDanger" Color="#C42B1C"/>
                    <SolidColorBrush x:Key="TextSuccess" Color="#0E7A0D"/>
                    <SolidColorBrush x:Key="TextWarning" Color="#F7630C"/>
                    <SolidColorBrush x:Key="HoverBackground" Color="#0A000000"/>
                    <SolidColorBrush x:Key="PressedBackground" Color="#12000000"/>
                    <SolidColorBrush x:Key="SelectedBackground" Color="#E6F2FB"/>
                    <SolidColorBrush x:Key="SelectedBorder" Color="#B4D6F4"/>
                    <SolidColorBrush x:Key="ModalOverlay" Color="#66000000"/>
                    <SolidColorBrush x:Key="InputBackground" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="TabNavBackground" Color="#F5F5F5"/>
                    <SolidColorBrush x:Key="TabItemHover" Color="#E8E8E8"/>
                    <SolidColorBrush x:Key="ToolbarHover" Color="#E8E8E8"/>
                    <SolidColorBrush x:Key="ToolbarPressed" Color="#D4D4D4"/>
                    <SolidColorBrush x:Key="PropertyRowBackground" Color="#F9F9F9"/>
                    <SolidColorBrush x:Key="PropertyRowHover" Color="#F0F0F0"/>
                    <SolidColorBrush x:Key="ChipBackground" Color="#F0F0F0"/>
                    <SolidColorBrush x:Key="ChipHover" Color="#E0E0E0"/>
                </ResourceDictionary>
                
                <!-- Dark Theme - Fluent 2 Design Language -->
                <ResourceDictionary x:Key="Dark">
                    <!-- Background layers (elevation) -->
                    <SolidColorBrush x:Key="AppBackground" Color="#202020"/>
                    <SolidColorBrush x:Key="AppForeground" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="SubtleForeground" Color="#ABABAB"/>
                    <SolidColorBrush x:Key="MutedForeground" Color="#767676"/>
                    <SolidColorBrush x:Key="CardBackground" Color="#2D2D2D"/>
                    <SolidColorBrush x:Key="SidebarBackground" Color="#202020"/>
                    <SolidColorBrush x:Key="SurfaceSubtle" Color="#292929"/>
                    
                    <!-- Borders - Fluent 2 uses subtle stroke colors -->
                    <SolidColorBrush x:Key="BorderDefault" Color="#3D3D3D"/>
                    <SolidColorBrush x:Key="BorderStrong" Color="#4D4D4D"/>
                    <SolidColorBrush x:Key="BorderMuted" Color="#333333"/>
                    
                    <!-- Accent brand colors - Fluent 2 brand ramp for dark -->
                    <SolidColorBrush x:Key="AccentBrand" Color="#479EF5"/>
                    <SolidColorBrush x:Key="AccentBrandHover" Color="#62ABF5"/>
                    <SolidColorBrush x:Key="AccentBrandPressed" Color="#2886DE"/>
                    <SolidColorBrush x:Key="TextOnBrand" Color="#000000"/>
                    
                    <!-- Surface backgrounds with brand tint -->
                    <SolidColorBrush x:Key="SurfaceBrand" Color="#0A2D4D"/>
                    <SolidColorBrush x:Key="SurfaceBrandHover" Color="#0F3D66"/>
                    
                    <!-- Semantic surface colors -->
                    <SolidColorBrush x:Key="SurfaceDanger" Color="#3B1919"/>
                    <SolidColorBrush x:Key="SurfaceSuccess" Color="#0D2D17"/>
                    <SolidColorBrush x:Key="SurfaceWarning" Color="#3D2E0F"/>
                    
                    <!-- Semantic text colors - Fluent 2 status colors for dark -->
                    <SolidColorBrush x:Key="TextDanger" Color="#F87171"/>
                    <SolidColorBrush x:Key="TextSuccess" Color="#6EE7B7"/>
                    <SolidColorBrush x:Key="TextWarning" Color="#FCD34D"/>
                    
                    <!-- Interactive states -->
                    <SolidColorBrush x:Key="HoverBackground" Color="#1AFFFFFF"/>
                    <SolidColorBrush x:Key="PressedBackground" Color="#26FFFFFF"/>
                    <SolidColorBrush x:Key="SelectedBackground" Color="#0F3D66"/>
                    <SolidColorBrush x:Key="SelectedBorder" Color="#479EF5"/>
                    
                    <!-- Overlay and input -->
                    <SolidColorBrush x:Key="ModalOverlay" Color="#B3000000"/>
                    <SolidColorBrush x:Key="InputBackground" Color="#383838"/>
                    
                    <!-- Tab and toolbar -->
                    <SolidColorBrush x:Key="TabNavBackground" Color="#292929"/>
                    <SolidColorBrush x:Key="TabItemHover" Color="#383838"/>
                    <SolidColorBrush x:Key="ToolbarHover" Color="#383838"/>
                    <SolidColorBrush x:Key="ToolbarPressed" Color="#444444"/>
                    
                    <!-- Property and chip backgrounds -->
                    <SolidColorBrush x:Key="PropertyRowBackground" Color="#292929"/>
                    <SolidColorBrush x:Key="PropertyRowHover" Color="#333333"/>
                    <SolidColorBrush x:Key="ChipBackground" Color="#383838"/>
                    <SolidColorBrush x:Key="ChipHover" Color="#444444"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
