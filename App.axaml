<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BusLane.App"
             RequestedThemeVariant="Default">
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/AppStyles.axaml"/>
    </Application.Styles>
    
    <!-- Fluent Design 2 Theme Resources -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <!-- Light Theme -->
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppBackground" Color="#F3F3F3"/>
                    <SolidColorBrush x:Key="AppForeground" Color="#1A1A1A"/>
                    <SolidColorBrush x:Key="SubtleForeground" Color="#616161"/>
                    <SolidColorBrush x:Key="MutedForeground" Color="#8A8A8A"/>
                    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="SidebarBackground" Color="#FAFAFA"/>
                    <SolidColorBrush x:Key="SurfaceSubtle" Color="#FAFAFA"/>
                    <SolidColorBrush x:Key="BorderDefault" Color="#E0E0E0"/>
                    <SolidColorBrush x:Key="BorderStrong" Color="#D1D1D1"/>
                    <SolidColorBrush x:Key="BorderMuted" Color="#E8E8E8"/>
                    <SolidColorBrush x:Key="AccentBrand" Color="#0F6CBD"/>
                    <SolidColorBrush x:Key="AccentBrandHover" Color="#115EA3"/>
                    <SolidColorBrush x:Key="AccentBrandPressed" Color="#0C4A7E"/>
                    <SolidColorBrush x:Key="SurfaceBrand" Color="#E6F2FB"/>
                    <SolidColorBrush x:Key="SurfaceBrandHover" Color="#D4E9F7"/>
                    <SolidColorBrush x:Key="SurfaceDanger" Color="#FCE9E8"/>
                    <SolidColorBrush x:Key="SurfaceSuccess" Color="#E6F4E6"/>
                    <SolidColorBrush x:Key="SurfaceWarning" Color="#FDF4E5"/>
                    <SolidColorBrush x:Key="TextDanger" Color="#C42B1C"/>
                    <SolidColorBrush x:Key="TextSuccess" Color="#0E7A0D"/>
                    <SolidColorBrush x:Key="TextWarning" Color="#F7630C"/>
                    <SolidColorBrush x:Key="HoverBackground" Color="#0A000000"/>
                    <SolidColorBrush x:Key="PressedBackground" Color="#12000000"/>
                    <SolidColorBrush x:Key="SelectedBackground" Color="#E6F2FB"/>
                    <SolidColorBrush x:Key="SelectedBorder" Color="#B4D6F4"/>
                    <SolidColorBrush x:Key="ModalOverlay" Color="#66000000"/>
                    <SolidColorBrush x:Key="InputBackground" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="TabNavBackground" Color="#F5F5F5"/>
                    <SolidColorBrush x:Key="TabItemHover" Color="#E8E8E8"/>
                    <SolidColorBrush x:Key="ToolbarHover" Color="#E8E8E8"/>
                    <SolidColorBrush x:Key="ToolbarPressed" Color="#D4D4D4"/>
                    <SolidColorBrush x:Key="PropertyRowBackground" Color="#F9F9F9"/>
                    <SolidColorBrush x:Key="PropertyRowHover" Color="#F0F0F0"/>
                    <SolidColorBrush x:Key="ChipBackground" Color="#F0F0F0"/>
                    <SolidColorBrush x:Key="ChipHover" Color="#E0E0E0"/>
                </ResourceDictionary>
                
                <!-- Dark Theme -->
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="AppBackground" Color="#1C1C1C"/>
                    <SolidColorBrush x:Key="AppForeground" Color="#EBEBEB"/>
                    <SolidColorBrush x:Key="SubtleForeground" Color="#9E9E9E"/>
                    <SolidColorBrush x:Key="MutedForeground" Color="#6E6E6E"/>
                    <SolidColorBrush x:Key="CardBackground" Color="#282828"/>
                    <SolidColorBrush x:Key="SidebarBackground" Color="#1C1C1C"/>
                    <SolidColorBrush x:Key="SurfaceSubtle" Color="#2A2A2A"/>
                    <SolidColorBrush x:Key="BorderDefault" Color="#404040"/>
                    <SolidColorBrush x:Key="BorderStrong" Color="#505050"/>
                    <SolidColorBrush x:Key="BorderMuted" Color="#363636"/>
                    <SolidColorBrush x:Key="AccentBrand" Color="#60CDFF"/>
                    <SolidColorBrush x:Key="AccentBrandHover" Color="#7AD4FF"/>
                    <SolidColorBrush x:Key="AccentBrandPressed" Color="#4CC2FF"/>
                    <SolidColorBrush x:Key="SurfaceBrand" Color="#003E5C"/>
                    <SolidColorBrush x:Key="SurfaceBrandHover" Color="#004D73"/>
                    <SolidColorBrush x:Key="SurfaceDanger" Color="#442726"/>
                    <SolidColorBrush x:Key="SurfaceSuccess" Color="#1D3D1D"/>
                    <SolidColorBrush x:Key="SurfaceWarning" Color="#433519"/>
                    <SolidColorBrush x:Key="TextDanger" Color="#FF9999"/>
                    <SolidColorBrush x:Key="TextSuccess" Color="#8AE68A"/>
                    <SolidColorBrush x:Key="TextWarning" Color="#FFB74D"/>
                    <SolidColorBrush x:Key="HoverBackground" Color="#18FFFFFF"/>
                    <SolidColorBrush x:Key="PressedBackground" Color="#24FFFFFF"/>
                    <SolidColorBrush x:Key="SelectedBackground" Color="#003E5C"/>
                    <SolidColorBrush x:Key="SelectedBorder" Color="#60CDFF"/>
                    <SolidColorBrush x:Key="ModalOverlay" Color="#AA000000"/>
                    <SolidColorBrush x:Key="InputBackground" Color="#323232"/>
                    <SolidColorBrush x:Key="TabNavBackground" Color="#2A2A2A"/>
                    <SolidColorBrush x:Key="TabItemHover" Color="#3A3A3A"/>
                    <SolidColorBrush x:Key="ToolbarHover" Color="#3A3A3A"/>
                    <SolidColorBrush x:Key="ToolbarPressed" Color="#484848"/>
                    <SolidColorBrush x:Key="PropertyRowBackground" Color="#2A2A2A"/>
                    <SolidColorBrush x:Key="PropertyRowHover" Color="#363636"/>
                    <SolidColorBrush x:Key="ChipBackground" Color="#363636"/>
                    <SolidColorBrush x:Key="ChipHover" Color="#444444"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
